{
  "name": "atlas-experiment-place",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "drizzle:export": "drizzle-kit export",
    "atlas:apply": "atlas schema apply --env local",
    "atlas:diff": "atlas migrate diff --env local",
    "atlas:status": "atlas migrate status --env local"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.7",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
